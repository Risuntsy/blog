---
import ConstrainedWidthLayout from "@/layouts/ConstrainedWidthLayout.astro";
import { langs } from "@/i18n/ui";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

export async function getStaticPaths() {
    return langs.map((lang) => ({
        params: {
            lang,
        },
    }));
}

const {lang} = getLangFromUrl(Astro.url);
const t = useTranslations(lang, "index");

---

<ConstrainedWidthLayout lang={lang} title="Index Page">
    <div>
        <h2>{t("title")}</h2>
        <a href={`/${lang}/post/1`}>See Posts</a>
    </div>
</ConstrainedWidthLayout>
