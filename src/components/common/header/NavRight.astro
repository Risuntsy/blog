---
import HeaderLink from "./HeaderLink.astro";
import { getLangAndPageFromUrl, useTranslations } from "@/i18n/utils";

interface Props {
    links: {
        title: string;
        href: string;
    }[];
}

const { links } = Astro.props;

const {lang} = getLangAndPageFromUrl(Astro.url);
const t = useTranslations(lang, "header-links");

---

{links.map((link) => <HeaderLink href={`/${lang}${link.href}`}>{t(link.title)}</HeaderLink>)}
