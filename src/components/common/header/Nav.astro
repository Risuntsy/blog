---
import MobileNav from "./NavMobile.astro";
import NavLeft from "./NavLeft.astro";
import NavRight from "./NavRight.astro";
import ThemeToggle from "./ThemeToggle.astro";
import { NAVIGATION } from "@/config";
---

<div class="left flex">
    <span class="flex space-x-2">
        <NavLeft links={NAVIGATION.left} />
    </span>
    <MobileNav />
</div>

<div class="right flex space-x-2">
    <ThemeToggle />
    <NavRight links={NAVIGATION.right} />
</div>
